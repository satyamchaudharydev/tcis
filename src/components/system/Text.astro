---
import { twMerge as tw } from "tailwind-merge";
import scribble from "../../fillers/scribble.png";
import type { Code } from "astro:components";

interface Props {
  type:
    | "h1"
    | "h2"
    | "h3"
    | "h4"
    | "base"
    | "lg"
    | "sm"
    | "xs"
    | "subtitle"
  class?: string;
  style?: {};
  tag?: string;
}

let { type = "base", tag = null, class: className, style = {}, ...props } = Astro.props;
const classes = {
  h1: "font-display font-[700] text-[101px] max-md:text-[2rem] leading-[120%]",
  h2: "font-display font-[700] text-[81px] max-md:text-[2.5rem] leading-[120%]",
  h3: "text-[51px] font-display font-[700] max-md:text-3xl leading-[120%]",
  h4: "text-[32px] font-display font-[700] max-md:text-3xl leading-[120%]",
  base: "text-[22.5px] font-sans max-md:text-base",
  lg: "text-[24px] font-sans max-md:text-base",
  sm: "text-[19.5px] font-sans leading-[140%] max-md:text-sm",
  xs: "text-[15px] font-sans",
  subtitle: "text-[24px] font-sans max-md:text-[18px] uppercase font-bold tracking-[2.4px] text-center",
}
if (!tag) {
  if (type === "h1" || type === "h2" || type === "h3") {
    tag = type;
  } else {
    tag = "p";
  }
}
const Tag = tag
---
<Tag class={tw(classes[type], className)} style={style} {...props}>
  <slot />
</Tag>
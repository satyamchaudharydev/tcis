---
import Text from '../../system/Text.astro';
import Section from '../../system/Section.astro';
import TestimonialCard from './TestimonialCard.astro';


import testimonial1 from '../../../assets/testimonial/1.png'
import testimonial2 from '../../../assets/testimonial/2.png'
import testimonial3 from '../../../assets/testimonial/3.png'
import PracticeBook from '../../utils/PracticeBook.astro';

// import Scribble from '../Scribble.astro';

const testimonials = {
    title: 'SSRBM Voices',
    subtitle: 'Stories of Transformation and Growth',
    data: [
      {
        image: testimonial1,
        quote: "SSRBM’s warm and supportive environment has played a vital role in shaping my child's educational journey and personal development. We’re delighted to call our child an Edifian!",
        ctaText: 'Watch Video',
        ctaLink: '',
        author: '- MS. VIJAYALAKSHMI, PARENT'
      },
      {
        image: testimonial2,
        quote: "Experiencing continuous growth over the past year, I've felt supported and welcomed since day one. This school provides an excellent platform for me to build confidence.",
        author: '- PRERnA, PlaySchool',
      },
      {
        image: testimonial3,
        quote: 'I cherish my school for its supportive and friendly teachers who not only enhance our skill sets but also instill invaluable moral values, creating a nurturing learning environment.',
        author: '- VIHANA, Nursery',

      },
    ],
}

const title = testimonials.title;
const data = testimonials.data
const subtitle = testimonials.subtitle;
---

<Section class="flex flex-col items-center">
  <Text type={'h2'} class="italic text-primary">
    <PracticeBook class="border-primary"> 
      Testimonials
    </PracticeBook>
  </Text>
  <div class="p-2" />
  <Text data-lines type={'base'} data-gsap>Shaping a Brighter Future for Your Child</Text>
  <div class="p-2" />

   <div data-gsap class='w-full h-[192px] rounded-2xl bg-white mt-7 border-gray-300 border overflow-hidden flex flex-row max-md:flex-col max-md:px-2 max-md:py-4 max-md:h-auto bg-slate-300'>
      <div class='
        min-w-[34vw] max-md:w-[100%]
        max-md:min-h-[136px] bg-cover bg-center
        rounded-lg
        rounded-r-none
        max-md:rounded-r-lg
        '
        style={{
          backgroundImage: `url('${testimonials.data[0].image.src}')`
        }}>
      </div>
      <div class='flex flex-col justify-center px-14 max-md:px-1 max-md:items-left'>
        <Text
          type={'sm'}
          class={'text-black max-md:mt-4 max-md:w-full'}
        >
          {testimonials.data[0].quote}
        </Text>

        <div class="pt-4 max-md:2" />
        <Text type="sm" class="tracking-[1.8px] text-primary uppercase font-bold">{testimonials.data[0].author}</Text>

      </div>
    </div>


  <div class="p-3" />

  <div class="flex flex-row gap-7 max-sm:flex-col max-sm:gap-0">
    {data.slice(1).map(item => {
      return (
        <TestimonialCard 
            quote={item.quote}
            author={item?.author}
            image={item.image}
            ctaText={item.ctaText}
            ctaLink={item.ctaLink}
            className="bg-transparent  rounded-bl-[50px]"
        />
      )
    })}
  </div>


</Section>

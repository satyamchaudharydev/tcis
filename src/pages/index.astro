<style>
  .float {
    position: fixed;
    color: #fff;
    border-radius: 50px;
    text-align: center;
    font-size: 30px;
    z-index: 100;
  }

  .float > div {
    opacity: 0;
    transition: 0.6s all ease-in-out;
  }
  .float a:hover ~ div {
    opacity: 1;
  }

  .my-float {
    margin-top: 16px;
  }
</style>


<script>
  import Swiper from "swiper";

  import { EffectCreative, Autoplay } from "swiper/modules";

  const swiper = new Swiper(".swiper", {
    // Optional parameters
    modules: [Autoplay, EffectCreative],
    direction: "horizontal",
    loop: true,
    effect: "creative",
    grabCursor: true,
    creativeEffect: {
      prev: {
        shadow: true,
        translate: ["-120%", 0, -500],
        opacity: 0.1,
      },
      next: {
        shadow: true,
        translate: ["120%", 0, -500],
        opacity: 0.5,
      },
    },
    slidesPerView: 1,
    spaceBetween: 10,
    speed: 900,
    autoplay: {
      delay: 2000,
      disableOnInteraction: false,
    },
  });

  const prevBtn = document.querySelector('[data-prev="swiper"]')
  const nextBtn = document.querySelector('[data-next="swiper"]')

  prevBtn.addEventListener('click', () => {
    swiper.slidePrev()
  })

  nextBtn.addEventListener('click', () => {
    swiper.slideNext()
  })
</script>